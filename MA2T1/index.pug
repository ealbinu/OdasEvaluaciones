    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1
                span.grade #{grade}
                | #{title}
            if subtitle.length>1
                h2 #{subtitle}

            +body(3600)
                template(v-if="i.type=='pregunta21'")
                    .choose.pregunta21
                        .label #[strong 21.] #[span Escribe los números que faltan en los recuadros.]
                        .options: .position-relative
                                img(src="aimg/21.png")
                                inputbox(:key="20" v-model="r[20]" :ref="refCount()" @isright="right++" type="number" placeh="#" :answer="[74, 64, 45, 57, 67]")
                
                template(v-if="i.type=='pregunta22'")
                    .choose.pregunta22
                        .label #[strong 22.] #[span Escribe los números que faltan en las siguientes sumas.]
                        .options
                            inputbox(:key="21" v-model="r[21]" :ref="refCount()" @isright="right++" type="number" placeh="#" :answer="[50,75,80]" :before="['50 +', '', '']" :after="[' = 100', ' + 25 = 100', ' + 20 = 100']")
                template(v-if="i.type=='pregunta23'")
                    .choose.pregunta23
                        .label #[strong 23.] #[span Escribe el número de pulgares que corresponden a la longitud de cada objeto.]
                        .row: img(src="aimg/23a.png", class="img-fluid")
                        .row: img(src="aimg/23b.png", class="img-fluid")
                        .row: img(src="aimg/23c.png", class="img-fluid")
                        .options
                            inputbox(:key="21" v-model="r[21]" :ref="refCount()" @isright="right++" type="number" placeh="#" :answer="[8,5,1]" :before="['Mide ','Mide ','Mide ']" :after="[' pulgares.',' pulgares.',' pulgares.']")
                template(v-if="i.type=='pregunta25'")
                    .choose.pregunta25
                        .label
                            | #[strong 25.] #[span Observa la imagen y escribe los números que faltan en cada oración.]
                            img(src="aimg/25.png", class="img-fluid")
                        .options
                            inputbox(:key="21" v-model="r[21]" :ref="refCount()" @isright="right++" type="number" placeh="#" :answer="[1,2,4]" :before="['Con 1 jarra puedo llenar ','Con 1 vaso puedo llenar ','Con 4 vasos puedo llenar ']" :after="[' vasos y 4 tazas.',' tazas.',' jarras.']")


