include ../assets/pug/_head
include ../assets/pug/_body
include ../assets/pug/_scripts

- grade = '6º'
- title = 'Matemáticas'
- subtitle = ''

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .choose .options > div {
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .choose .options > div > div {
                border: none;
                padding: 0;
                box-shadow: none;
                max-width: 200px;
            }
            .choose .options > div > div hr {
                border-top: 4px solid var(--sec);
                margin: 2px 0;
            }

            .choose .label div {
                display: inline-block;
                align-items: center;
                box-shadow: none;
                max-width: 40px;
                text-align: center;
                font-size: 1.2rem;
                padding: 0 10px;
                vertical-align: middle;
                border-radius: 4px;
            }
            .choose .label hr {
                border-top: 4px solid var(--sec);
                margin: 2px 0;
            }


    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1
                span.grade #{grade}
                | #{title}
            if subtitle.length>1
                h2 #{subtitle}

            +body

        +scripts
